<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
        >
    <mapped-superclass name="Payum2\Heartland\Bridge\Doctrine\Entity\PaymentDetails">

        <field name="messages" column="messages" type="text" nullable="true" />

        <field name="isSuccessful" column="is_successful" type="boolean" nullable="false" />

        <field name="amount" column="amount" type="decimal" nullable="true" />

        <field name="transactionId" column="transaction_id" type="integer" nullable="true" />

        <field name="merchantName" column="merchant_name" type="string" nullable="true" />

        <field name="batchId" column="batch_id" type="integer" nullable="true" />
    </mapped-superclass>
</doctrine-mapping>
